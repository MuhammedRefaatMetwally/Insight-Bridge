{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,                
    "noImplicitAny": false,         
    "skipLibCheck": true,           
    "noEmitOnError": false,       
    "allowJs": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}